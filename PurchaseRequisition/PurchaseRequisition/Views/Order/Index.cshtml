@model IEnumerable<PurchaseRequisition.Models.Order>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager

@{
    ViewData["Title"] = "Order Index";
}

<h2>Order Index</h2>

<p>
    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Member"))
    {
        <a asp-action="Create">Create New Order</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BudgetCodeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusinessJustification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCostOfItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DivisionChair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApproverCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BudgetCodeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessJustification)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCostOfItems)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DivisionChair)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApproverCode)
                </td>
                <td>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Member"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    }
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("Auditor"))
                    {
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
